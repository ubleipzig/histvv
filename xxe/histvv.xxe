<?xml version='1.0' encoding='utf-8'?>
<configuration name="HistVV"
  xmlns="http://www.xmlmind.com/xmleditor/schema/configuration">

  <detect>
    <or>
      <rootElementLocalName>vv</rootElementLocalName>
      <rootElementNamespace>http://hashtable.de/ns/histvv</rootElementNamespace>
    </or>
  </detect>

  <relaxng location="histvv.rng"
           name="http://hashtable.de/ns/histvv"/>

  <schematron location="histvv.rng"/>

  <css name="Editieransicht" location="css/edit.css" />
  <css name="Struktur" location="css/structure.css" alternate="true"/>
  <css name="Textansicht" location="css/text.css" alternate="true"/>

  <template name="Vorlesungsverzeichnis" location="templates/vv.xml" />

  <saveOptions favorInteroperability="false"/>

  <elementTemplate name="default" selectable="override">
    <veranstaltung xmlns="http://hashtable.de/ns/histvv"/>
  </elementTemplate>

  <elementTemplate name="default" selectable="override">
    <sachgruppe xmlns="http://hashtable.de/ns/histvv">
      <titel/>
    </sachgruppe>
  </elementTemplate>

  <!--
    aus irgendeinem Grund funktioniert das nicht mit
    selectable="override"
  --> 
  <elementTemplate name="transkribent">
    <status xmlns="http://hashtable.de/ns/histvv">
      <transkribent/>
    </status>
  </elementTemplate>

</configuration>
